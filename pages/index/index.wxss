/**index.wxss**/
.container {
  width: 750rpx;
  height: 100%;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.8);
}
.line {
  width: 750rpx;
  padding: 35rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.show-value {
  width: 750rpx;
  height: 140rpx;
  padding: 0 35rpx;
  font-size: 120rpx;
  box-sizing: border-box;
  color: #FFF;
  font-weight: 300;
}

.number, .action-button, .set-button {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  background-color: rgba(255, 255, 255, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #FFF;
  font-weight: 300;
}
.set-button {
  background-color: rgba(255, 255, 255, 0.3);
}
.action-button {
  background-color: rgba(255,145,0, 0.7);
}
.zero {
  width: 310rpx;
}